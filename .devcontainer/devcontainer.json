{
  "name": "Jekyll Dev Container",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "../"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "sissel.shopify-liquid"
      ],
      "settings": {
        "files.associations": {
          "*.html": "liquid"
        }
      }
    }
  },
  "forwardPorts": [4000],
  "onCreateCommand": "bundle install"
}